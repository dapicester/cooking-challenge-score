<% provide :page_title, 'Scores' %>

<% if no_data? %>
  <div class="alert alert-warning" role="alert">
	  No data available yet.
  </div>
<% else %>
  <table class="table table-striped table-hover">
    <caption hidden>Ranks</caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Team</th>
        <th scope="col">Description</th>
        <th scope="col">Score</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.sort_by(&:score).reverse.each.with_index do |team, index| %>
        <tr>
          <th scope="row"><%= index + 1 %>
          <td><%= team.name %></td>
	  <td data-toggle="tooltip" title="<%= team.description %>"><%= truncate team.description, separator: ' ' %>
          <td><%= team.score %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div>
</div>

<div>
  <%= render 'chart' unless no_data? %>
</div>
